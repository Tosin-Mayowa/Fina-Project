                        <label asp-for="APP_Report.Datalink2" class="control-label"></label>
                    </td>
                    <td>
                        <input asp-for="APP_Report.Datalink2" class="form-control" />
                        <span asp-validation-for="APP_Report.Datalink2" class="text-danger"></span>
                    </td>
                </tr>
