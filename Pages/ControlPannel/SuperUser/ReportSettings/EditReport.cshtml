                </tr>
                <tr>
                    <td>
                        <label asp-for="APP_Report.GMethod" class="control-label"></label>
                    </td>
                    <td>

                        <select asp-for="APP_Report.GMethod" class="form-control">
                            <option value="">Select GMethod</option>
